<% provide(:title, "Edit Scheduled Transaction") %>

<div class="bg-gray-100 rounded-lg shadow-md overflow-hidden flex flex-col h-[calc(100vh-120px)]">
  <!-- Header row -->
  <div class="bg-gray-800 py-3 px-4 flex justify-between items-center flex-shrink-0">
    <div class="w-1/3">
      <%= link_to "Back", scheduled_trxes_path, class: "text-white hover:text-blue-200" %>
    </div>
    <h1 class="text-white text-xl font-bold w-1/3 text-center">Edit Scheduled Transaction</h1>
    <div class="w-1/3 text-right">
      <%= button_to 'Delete', 
          scheduled_trx_path(@scheduled_trx), 
          method: :delete,
          class: 'bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm',
          form: { data: { turbo_confirm: 'Are you sure?' } } %>
    </div>
  </div>
  
  <!-- Form section -->
  <div class="p-4 overflow-y-auto flex-grow">
    <div class="bg-white rounded-lg p-4 shadow-sm">
      <%= render "form", scheduled_trx: @scheduled_trx %>
    </div>
  </div>
</div> 