<% provide(:title, "Vendors") %>

<div class="bg-gray-100 rounded-lg shadow-md overflow-hidden grid grid-rows-[auto_1fr] h-full" data-controller="vendors">
  <!-- Header row -->
  <div class="bg-gray-800 py-3 px-4 flex justify-between items-center">
    <div class="w-1/3"></div>
    <h1 class="text-white text-xl font-bold w-1/3 text-center">Vendors</h1>
    <div class="w-1/3 text-right">
      <%= link_to "New Vendor", new_vendor_path, 
          data: { turbo_frame: "modal" }, 
          class: "px-3 py-2 bg-blue-600 text-white rounded-md" %>
    </div>
  </div>

  <!-- Vendors list -->
  <div class="p-2 overflow-y-auto min-h-0">
    <%= render "list", vendors: @vendors %>
  </div>
</div>

<%= turbo_frame_tag "modal" %>