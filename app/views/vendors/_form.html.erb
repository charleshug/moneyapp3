<%= form_with(model: vendor) do |f| %>
  <!-- Vendor header -->
  <div class="mb-6 pb-4 border-b border-gray-200">
    <h3 class="text-lg font-semibold text-gray-900">
      <% if vendor.persisted? %>
        Edit Vendor: <%= vendor.name %>
      <% else %>
        Create New Vendor
      <% end %>
    </h3>
  </div>

  <% if vendor.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4 rounded-md">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= pluralize(vendor.errors.count, "error") %> prohibited this vendor from being saved:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% vendor.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <div class="mb-4">
        <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
      </div>
    </div>

  </div>

  <div class="actions mt-6 flex justify-between">
    <div>
      <%= f.submit class: "px-4 py-2 bg-green-500 hover:bg-green-600 text-white rounded-md" %>
    </div>
    <% if vendor.persisted? %>
      <div>
        <%= link_to "Delete", vendor_path(vendor), 
            class: "px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-md inline-block text-center",
            data: { turbo_method: :delete, turbo_confirm: "Are you sure? This will delete all transactions associated with this vendor." } %>
      </div>
    <% end %>
  </div>
<% end %>