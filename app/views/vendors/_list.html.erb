<div id="vendors_list">
  <% if vendors.any? %>
    <table class="w-full bg-white rounded-lg overflow-hidden">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-2 text-left">Name</th>
        </tr>
      </thead>
      <tbody>
        <% vendors.each_with_index do |vendor, index| %>
          <tr class="border-t border-gray-100 hover:bg-blue-100 transition-colors duration-150 <%= index.even? ? 'bg-white' : 'bg-gray-50' %>">
            <td class="px-4 py-2 text-gray-800 font-medium">
              <%= link_to vendor.name, edit_vendor_path(vendor), 
                  data: { turbo_frame: "modal" },
                  class: "block w-full h-full" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="flex-grow flex items-center justify-center">
      <div class="text-center p-8 bg-white rounded-lg shadow-sm max-w-md">
        <p class="text-gray-600 mb-4">No vendors found.</p>
      </div>
    </div>
  <% end %>
</div>
