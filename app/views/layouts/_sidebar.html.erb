<div id="sidebar" class="fixed inset-y-0 left-0 w-64 bg-white shadow-lg">
  <div class="flex flex-col h-full">
    <div class="p-4 border-b border-gray-200 flex items-center">
      <div class="flex-1">
        <h2 class="text-xl font-semibold">
          <%= @current_budget&.name || "No Budget Selected" %>
        </h2>
        <p class="text-xs text-gray-500"><%= current_user.email %></p>
      </div>
      <%= link_to edit_user_registration_path, class: "p-2 rounded-md hover:bg-gray-100 focus:outline-none" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
      <% end %>
    </div>
    <div class="flex-1 overflow-y-auto p-4">
      <nav class="space-y-2">
        <%= link_to "Budgets", budgets_path, class: "block px-4 py-2 rounded-md hover:bg-gray-100 #{request.path.starts_with?('/budgets') ? 'bg-blue-50 text-blue-600 font-medium' : ''}" %>
        <%= link_to "Reports", reports_path, class: "block px-4 py-2 rounded-md hover:bg-gray-100 #{request.path.starts_with?('/reports') ? 'bg-blue-50 text-blue-600 font-medium' : ''}" %>
        <%= link_to "Vendors", vendors_path, 
            data: { turbo_frame: "modal" }, 
            class: "block px-4 py-2 rounded-md hover:bg-gray-100 #{request.path.starts_with?('/vendors') ? 'bg-blue-50 text-blue-600 font-medium' : ''}" %>
        
        <div class="relative">
          <%= link_to trxes_path, class: "flex items-center justify-between px-4 py-2 rounded-md hover:bg-gray-100 #{request.path.starts_with?('/accounts') ? 'bg-blue-50 text-blue-600 font-medium' : ''}" do %>
            <div>Accounts</div>
            <div class="text-sm <%= @sidebar_total_balance < 0 ? 'text-red-600' : '' %>">
              <%= number_to_currency(@sidebar_total_balance/100.0, unit: "$", separator: ".", delimiter: ",") %>
            </div>
          <% end %>
          
          <div class="pl-4 mt-1 border-l-2 border-gray-200 space-y-2 max-h-[calc(100vh-350px)] overflow-y-auto">
            <% if @current_budget && @sidebar_accounts.any? %>              
              <% if @sidebar_on_budget_accounts.any? %>
                <div class="mt-2 mb-1">
                  <%= link_to trxes_path(q: {account_id_in: @sidebar_on_budget_accounts.map(&:id)}), class: "block px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider hover:bg-gray-100 rounded-md" do %>
                    On Budget <span class="float-right"><%= number_to_currency(@sidebar_on_budget_balance/100.0, unit: "$", separator: ".", delimiter: ",") %></span>
                  <% end %>
                  <div class="space-y-1 mt-1">
                    <% @sidebar_on_budget_accounts.each do |account| %>
                      <div class="flex justify-between items-center px-4 py-1 text-sm rounded-md hover:bg-gray-100 <%= request.path == account_path(account) ? 'bg-blue-50' : '' %>">
                        <%= link_to account.name, edit_account_path(account), data: { turbo_frame: "modal" }, class: "#{request.path == edit_account_path(account) ? 'text-blue-600 font-medium' : ''}" %>
                        <%= link_to number_to_currency(account.balance/100.0, unit: "$", separator: ".", delimiter: ","), trxes_path(q:{account_id_eq: account.id}), class: "text-right #{account.balance < 0 ? 'text-red-600' : ''}" %>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
              
              <% if @sidebar_off_budget_accounts.any? %>
                <div class="mt-2 mb-1">
                  <%= link_to trxes_path(q: {account_id_in: @sidebar_off_budget_accounts.map(&:id)}), class: "block px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider hover:bg-gray-100 rounded-md" do %>
                    Off Budget <span class="float-right"><%= number_to_currency(@sidebar_off_budget_balance/100.0, unit: "$", separator: ".", delimiter: ",") %></span>
                  <% end %>
                  <div class="space-y-1 mt-1">
                    <% @sidebar_off_budget_accounts.each do |account| %>
                      <div class="flex justify-between items-center px-4 py-1 text-sm rounded-md hover:bg-gray-100 <%= request.path == account_path(account) ? 'bg-blue-50' : '' %>">
                        <%= link_to account.name, edit_account_path(account), data: { turbo_frame: "modal" }, class: "#{request.path == edit_account_path(account) ? 'text-blue-600 font-medium' : ''}" %>
                        <%= link_to number_to_currency(account.balance/100.0, unit: "$", separator: ".", delimiter: ","), trxes_path(q:{account_id_eq: account.id}), class: "text-right #{account.balance < 0 ? 'text-red-600' : ''}" %>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
              
              <% if @sidebar_closed_accounts.any? %>
                <div class="mt-2 mb-1">
                  <%= link_to trxes_path(q: {account_id_in: @sidebar_closed_accounts.map(&:id)}), class: "block px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider hover:bg-gray-100 rounded-md" do %>
                    Closed <span class="float-right"><%= number_to_currency(@sidebar_closed_balance/100.0, unit: "$", separator: ".", delimiter: ",") %></span>
                  <% end %>
                  <div class="space-y-1 mt-1">
                    <% @sidebar_closed_accounts.each do |account| %>
                      <div class="flex justify-between items-center px-4 py-1 text-sm rounded-md hover:bg-gray-100 <%= request.path == account_path(account) ? 'bg-blue-50' : '' %>">
                        <%= link_to account.name, edit_account_path(account), data: { turbo_frame: "modal" }, class: "text-gray-500 #{request.path == edit_account_path(account) ? 'text-blue-600 font-medium' : ''}" %>
                        <%= link_to number_to_currency(account.balance/100.0, unit: "$", separator: ".", delimiter: ","), trxes_path(q:{account_id_eq: account.id}), class: "text-right text-gray-500" %>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>
            
            <%= link_to new_account_path, 
                data: { turbo_frame: "modal" }, 
                class: "block px-4 py-1 text-sm rounded-md hover:bg-gray-100 text-green-600 mt-2" do %>
              <span class="flex items-center">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Add Account
              </span>
            <% end %>
          </div>
        </div>
      </nav>
    </div>
    <div class="p-4 border-t border-gray-200">
      <%= link_to destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "flex items-center justify-center w-full px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-md transition-colors duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
        Sign Out
      <% end %>
    </div>
  </div>
</div>