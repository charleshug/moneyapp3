<% provide(:title, "Sign In") %>

<div class="bg-gray-100 rounded-lg shadow-md overflow-hidden flex flex-col h-[calc(100vh-120px)]">
  <!-- Header row -->
  <div class="bg-gray-800 py-3 px-4 flex justify-between items-center flex-shrink-0">
    <div class="w-1/3"></div>
    <h1 class="text-white text-xl font-bold w-1/3 text-center">Sign In</h1>
    <div class="w-1/3 text-right"></div>
  </div>
  
  <!-- Form section -->
  <div class="p-4 overflow-y-auto flex-grow flex items-center justify-center">
    <div class="bg-white rounded-lg p-6 shadow-sm max-w-md w-full">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-4 flex items-center">
            <%= f.check_box :remember_me, class: "rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Sign in", class: "w-full px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-md" %>
        </div>
      <% end %>

      <div class="mt-6 border-t border-gray-200 pt-4">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
