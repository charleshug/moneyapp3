<% provide(:title, "Import Budget") %>

<div class="bg-gray-100 rounded-lg shadow-md overflow-hidden flex flex-col h-[calc(100vh-120px)]">
  <!-- Header row -->
  <div class="bg-gray-800 py-3 px-4 flex justify-between items-center flex-shrink-0">
    <div class="w-1/3">
      <%= link_to "Back", trxes_path, class: "text-white hover:text-blue-200" %>
    </div>
    <h1 class="text-white text-xl font-bold w-1/3 text-center">Import Budget</h1>
    <div class="w-1/3 text-right"></div>
  </div>

  <!-- Content section -->
  <div class="p-4 overflow-y-auto flex-grow">
    <div class="bg-white rounded-lg p-6 shadow-sm">
      <% if @csv_data.nil? %>
        <div class="mb-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Upload Budget CSV</h2>
          <p class="text-sm text-gray-600 mb-4">
            Upload a CSV file with the following columns:
            <ul class="list-disc list-inside mt-2">
              <li>Date (YYYY-MM-DD)</li>
              <li>Subcategory</li>
              <li>Budget (decimal amount)</li>
              <li>Carry Forward Negative Balance (true/false)</li>
            </ul>
          </p>

          <%= form_tag import_preview_import_budgets_path, multipart: true, data: { turbo: false } do %>
            <div class="mb-4">
              <%= file_field_tag :file, accept: '.csv', class: "block w-full text-sm text-gray-500
                file:mr-4 file:py-2 file:px-4
                file:rounded-md file:border-0
                file:text-sm file:font-semibold
                file:bg-blue-50 file:text-blue-700
                hover:file:bg-blue-100" %>
            </div>
            <%= submit_tag "Preview", class: "px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-md" %>
          <% end %>
        </div>
      <% else %>
        <div class="mb-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Preview Budget Import</h2>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <% @headers.each do |header| %>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      <%= header %>
                    </th>
                  <% end %>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @preview_rows.each do |row| %>
                  <tr>
                    <% @headers.each do |header| %>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        <%= row[header] %>
                      </td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="flex justify-between">
          <%= link_to "Cancel", import_preview_import_budgets_path, class: "px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-md" %>
          <%= form_tag submit_import_import_budgets_path, data: { turbo: false } do %>
            <%= submit_tag "Submit", class: "px-4 py-2 bg-green-500 hover:bg-green-600 text-white rounded-md" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div> 