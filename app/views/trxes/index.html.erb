<% provide(:title, "Transactions") %>

<div class="bg-gray-100 rounded-lg shadow-md overflow-hidden flex flex-col h-[calc(100vh-120px)]">
  <!-- Header row -->
  <div class="bg-gray-800 py-3 px-4 flex justify-between items-center flex-shrink-0">
    <div class="w-1/3">
      <button id="toggle-filters" class="text-white hover:text-blue-200 flex items-center">
        <i class="fas fa-filter mr-1"></i> Filters
        <i class="fas fa-chevron-down ml-1 transition-transform" id="filter-chevron"></i>
      </button>
    </div>
    <h1 class="text-white text-xl font-bold w-1/3 text-center">Transactions</h1>
    <div class="w-1/3 text-right">
      <%= link_to new_trx_path, class: "bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-sm mr-2" do %>
        <i class="fas fa-plus"></i> New
      <% end %>
      <%= link_to import_trxes_path, class: "bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded text-sm" do %>
        <i class="fas fa-file-import"></i> Import
      <% end %>
    </div>
  </div>

  <!-- Filter section -->
  <div class="bg-white py-3 px-4 mb-2 flex-shrink-0">
    <%= search_form_for @q, class: 'filter-form' do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <div class="flex space-x-2">
            <div class="w-1/2">
              <%= f.label :date_gteq, "Date From", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.date_field :date_gteq, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
            </div>
            <div class="w-1/2">
              <%= f.label :date_lteq, "Date To", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.date_field :date_lteq, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
            </div>
          </div>
        </div>

        <div>
          <%= f.label :account_id_in, "Accounts", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :account_id_in,
              @accounts,
              :id,
              :name,
              { include_blank: true },
              { multiple: true, class: 'select2 w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50' } %>
        </div>

        <div>
          <%= f.label :vendor_id_in, "Vendors", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :vendor_id_in,
              @vendors.order('LOWER(name)'),
              :id,
              :name,
              { include_blank: true },
              { multiple: true, class: 'select2 w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50' } %>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
        <div>
          <%= f.label :lines_ledger_subcategory_category_id_in, "Categories", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :lines_ledger_subcategory_category_id_in,
              @categories,
              :id,
              :name,
              { include_blank: true },
              { multiple: true, class: 'select2 w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50' } %>
        </div>

        <div>
          <%= f.label :lines_ledger_subcategory_id_in, "Subcategories", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.grouped_collection_select :lines_ledger_subcategory_id_in,
              @categories,
              :subcategories,
              :name,
              :id,
              :name,
              { include_blank: true },
              { multiple: true, class: 'select2 w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50' } %>
        </div>
      </div>

      <div class="mt-4 flex space-x-2">
        <%= f.submit "Filter", class: "px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-md" %>
        <%= link_to "Clear", trxes_path, class: "px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded-md" %>
      </div>
    <% end %>
  </div>

  <!-- Transactions table -->
  <div class="p-2 overflow-y-auto flex-grow flex flex-col">
    <% if @trxes.any? %>
      <div class="overflow-x-auto flex-grow">
        <table class="w-full bg-white rounded-lg overflow-hidden">
          <thead class="bg-gray-50 sticky top-0 z-10">
            <tr>
              <th class="px-4 py-2 text-left"><%= sort_link(@q, :id, "ID") %></th>
              <th class="px-4 py-2 text-left"><%= sort_link(@q, :date, "Date") %></th>
              <th class="px-4 py-2 text-left"><%= sort_link(@q, :vendor_name, "Vendor") %></th>
              <th class="px-4 py-2 text-left"><%= sort_link(@q, :account_name, "Account") %></th>
              <th class="px-4 py-2 text-right"><%= sort_link(@q, :amount, "Amount") %></th>
              <th class="px-4 py-2 text-left"><%= sort_link(@q, :lines_ledger_subcategory_category_name, "Category") %></th>
              <th class="px-4 py-2 text-left"><%= sort_link(@q, :lines_ledger_subcategory_name, "Subcategory") %></th>
              <th class="px-4 py-2 text-left"><%= sort_link(@q, :memo, "Memo") %></th>
              <th class="px-4 py-2 text-left">Transfer</th>
            </tr>
          </thead>
          <tbody>
            <% @trxes.each do |trx| %>
              <% is_split = trx.lines.size > 1 %>
              
              <%# Main transaction row %>
              <tr class="<%= 'border-b-0' if is_split %> border-t border-gray-100 hover:bg-gray-50">
                <td class="px-4 py-2"><%= link_to trx.id, edit_trx_path(trx), class: "text-blue-600 hover:text-blue-800" %></td>
                <td class="px-4 py-2"><%= trx.date %></td>
                <td class="px-4 py-2"><%= trx.vendor.name %></td>
                <td class="px-4 py-2"><%= trx.account.name %></td>
                <td class="px-4 py-2 text-right <%= 'text-gray-500 italic' if is_split %>">
                  <%= number_to_currency(trx.amount / 100.0) %>
                </td>
                <td class="px-4 py-2">
                  <% if is_split %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Split</span>
                  <% else %>
                    <%= trx.lines.first&.ledger&.subcategory&.category&.name %>
                  <% end %>
                </td>
                <td class="px-4 py-2">
                  <% unless is_split %>
                    <%= trx.lines.first&.ledger&.subcategory&.name %>
                  <% end %>
                </td>
                <td class="px-4 py-2"><%= trx.memo %></td>
                <td class="px-4 py-2">
                  <% if trx.lines.any? { |line| line.transfer_line.present? } %>
                    <% transfer_line = trx.lines.find { |line| line.transfer_line.present? } %>
                    <%= link_to transfer_line.transfer_line.trx.id, edit_trx_path(transfer_line.transfer_line.trx), class: "text-blue-600 hover:text-blue-800" %>
                  <% end %>
                </td>
              </tr>

              <%# Split lines %>
              <% if is_split %>
                <% trx.lines.each do |line| %>
                  <tr class="bg-gray-50 border-t-0 border-gray-100">
                    <td colspan="4" class="px-4 py-1 pl-8"></td>
                    <td class="px-4 py-1 text-right">
                      <%= number_to_currency(line.amount / 100.0) %>
                    </td>
                    <td class="px-4 py-1"><%= line.ledger&.subcategory&.category&.name %></td>
                    <td class="px-4 py-1"><%= line.ledger&.subcategory&.name %></td>
                    <td class="px-4 py-1"></td>
                    <td class="px-4 py-1">
                      <% if line.transfer_line.present? %>
                        <%= link_to line.transfer_line.trx.id, edit_trx_path(line.transfer_line.trx), class: "text-blue-600 hover:text-blue-800" %>
                      <% end %>
                    </td>
                    <td class="px-4 py-1"></td>
                  </tr>
                <% end %>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="mt-4 flex justify-between items-center sticky bottom-0 bg-gray-100 p-2 z-10">
        <div class="text-sm text-gray-600">
          <strong>Page:</strong> <%= pluralize(@trxes.size, 'transaction') %>
          <span class="mx-2">|</span>
          <strong>Total:</strong> <%= pluralize(@filtered_count, 'transaction') %>
        </div>
        <div>
          <%= custom_pagy_nav(@pagy) %>
        </div>
      </div>
    <% else %>
      <div class="flex-grow flex items-center justify-center">
        <div class="text-center p-8 bg-white rounded-lg shadow-sm max-w-md">
          <p class="text-gray-600 mb-4">No transactions found.</p>
          <%= link_to new_trx_path, class: "px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-md inline-block" do %>
            <i class="fas fa-plus mr-2"></i> Create Your First Transaction
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% content_for :styles do %>
  <style>
    .transactions td {
      padding: 4px;
      border: 1px solid #ddd;
    }
    
    .amount {
      text-align: right;
    }
    
    .total-amount {
      color: #666;
      font-style: italic;
    }
    
    .split-line {
      background-color: #f9f9f9;
    }
    
    .split-line td {
      border-top: none;
    }
    
    .multi-line-parent {
      border-bottom: none;
    }
    
    .multi-line-parent td {
      border-bottom: none;
    }
    
    .split-indicator {
      color: #666;
      font-style: italic;
    }

    .totals {
      margin: 1rem 0;
      display: flex;
      justify-content: space-between;
      padding: 0.5rem;
      background: #f5f5f5;
      border-radius: 4px;
    }

    .page-totals, .filtered-totals {
      padding: 0.5rem;
    }

    /* Sorting styles */
    .transactions th a {
      color: #333;
      text-decoration: none;
      display: block;
      position: relative;
      padding-right: 15px;
    }

    .transactions th a:hover {
      color: #666;
    }

    .transactions th a.asc:after {
      content: "▲";
      position: absolute;
      right: 0;
      font-size: 0.8em;
    }

    .transactions th a.desc:after {
      content: "▼";
      position: absolute;
      right: 0;
      font-size: 0.8em;
    }
  </style>
<% end %>