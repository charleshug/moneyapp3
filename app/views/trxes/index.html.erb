<% provide(:title, "Transactions") %>

<style>
  .selected-row {
    background-color: #fef3c7 !important; /* bg-yellow-200 */
  }
  .selected-row:hover {
    background-color: #fef3c7 !important; /* Keep yellow on hover */
  }
  .editing-row {
    background-color: #dbeafe !important; /* bg-blue-100 */
    border: 2px solid #3b82f6 !important; /* border-blue-500 */
  }
  .editing-row:hover {
    background-color: #dbeafe !important; /* Keep blue on hover */
  }
</style>

<div class="bg-gray-100 shadow-md overflow-hidden flex flex-col" style="height: 100vh;" data-controller="trx-selection">


  <!-- Filter Bar -->
  <%= render 'trxes/filter_bar' %>

  <!-- Transactions list -->
<div class="flex flex-col flex-grow overflow-hidden">
  <% if @trxes.any? %>
    <!-- Header row -->
    <div class="bg-white shadow-sm p-1 border-b border-gray-200 sticky top-0 z-5">
      <div class="grid items-center font-medium text-blue-600" style="grid-template-columns: 40px 60px 100px 100px 1fr 100px 100px 1fr 1fr 60px;">
        <div class="text-center px-2">
          <input type="checkbox" 
                 data-trx-selection-target="headerCheckbox"
                 data-action="click->trx-selection#toggleAll"
                 class="rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
        </div>
        <div class="text-left border-l border-gray-300 px-2">ID</div>
        <div class="text-left border-l border-gray-300 px-2">Account</div>
        <div class="text-left border-l border-gray-300 px-2">Date</div>
        <div class="text-left border-l border-gray-300 px-2">Vendor</div>
        <div class="text-left border-l border-gray-300 px-2">Amount</div>
        <div class="text-left border-l border-gray-300 px-2">Category</div>
        <div class="text-left border-l border-gray-300 px-2">Subcategory</div>
        <div class="text-left border-l border-gray-300 px-2">Memo</div>
        <div class="text-center border-l border-gray-300 px-2">Cleared</div>
      </div>
      <div class="text-xs text-gray-500 mt-1 px-2">
        ðŸ’¡ Double-click any row to edit transaction details
      </div>
    </div>

    <!-- Scrollable data rows -->
    <div class="overflow-y-auto flex-grow">
      <% @trxes.each do |trx| %>
        <% if trx.lines.size == 1 %>
          <div class="odd:bg-white even:bg-blue-50 bg-white shadow-sm p-1 hover:bg-gray-50 border-b border-gray-200 cursor-pointer"
               data-trx-selection-target="row"
               data-trx-id="<%= trx.id %>"
               data-trx-cleared="<%= trx.cleared %>"
               data-trx-memo="<%= trx.memo %>"
               data-line-id="<%= trx.lines.first&.id %>"
               data-ledger-id="<%= trx.lines.first&.ledger_id %>"
               data-subcategory-id="<%= trx.lines.first&.ledger&.subcategory_id %>"
               data-action="click->trx-selection#selectRow dblclick->trx-selection#activateRowEditing">
            <div class="grid items-center text-gray-800" style="grid-template-columns: 40px 60px 100px 100px 1fr 100px 100px 1fr 1fr 60px;">
              <div class="px-2">
                <input type="checkbox" 
                       data-trx-selection-target="checkbox"
                       data-trx-id="<%= trx.id %>"
                       data-action="click->trx-selection#toggleSelection"
                       class="rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
              </div>
              <div class="truncate text-left px-2"><%= trx.id %></div>
              <!-- Editable Account -->
              <div class="truncate text-left px-2">
                <div data-trx-inline-edit-target="display" 
                     class="cursor-pointer hover:bg-gray-100 rounded px-1 py-0.5"
>
                  <%= trx.account.name %>
                </div>
                <select data-trx-inline-edit-target="input"
                        data-field-name="account_id"
                        value="<%= trx.account.id %>"
                        class="hidden w-full text-sm rounded border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                        data-action="keydown->trx-selection#handleKeydown">
                  <% @current_budget.accounts.each do |account| %>
                    <option value="<%= account.id %>" <%= 'selected' if account.id == trx.account.id %>><%= account.name %></option>
                  <% end %>
                </select>
              </div>
              
              <!-- Editable Date -->
              <div class="truncate text-left px-2" 
                   data-controller="trx-inline-edit"
                   data-trx-inline-edit-trx-id-value="<%= trx.id %>"
                   data-trx-inline-edit-field-name-value="date"
                   data-trx-inline-edit-original-value-value="<%= trx.date %>"
                   data-trx-cleared="<%= trx.cleared %>"
                   data-trx-memo="<%= trx.memo %>">
                <div data-trx-inline-edit-target="display" 
                     class="cursor-pointer hover:bg-gray-100 rounded px-1 py-0.5"
                     data-action="click->trx-inline-edit#handleClick">
                  <%= trx.date %>
                </div>
                <input type="date" 
                       data-trx-inline-edit-target="input"
                       data-field-name="date"
                       value="<%= trx.date %>"
                       class="hidden w-full text-sm rounded border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                       data-action="keydown->trx-selection#handleKeydown">
              </div>
              
              <!-- Editable Vendor -->
              <div class="truncate text-left px-2" 
                   data-controller="trx-inline-edit vendor-autocomplete"
                   data-trx-inline-edit-trx-id-value="<%= trx.id %>"
                   data-trx-inline-edit-field-name-value="vendor"
                   data-trx-inline-edit-original-value-value="<%= trx.vendor.name %>"
                   data-vendor-autocomplete-search-url-value="<%= search_vendors_path %>"
                   data-vendor-autocomplete-budget-id-value="<%= @current_budget.id %>"
                   data-trx-cleared="<%= trx.cleared %>"
                   data-trx-memo="<%= trx.memo %>">
                <div data-trx-inline-edit-target="display" 
                     class="cursor-pointer hover:bg-gray-100 rounded px-1 py-0.5"
                     data-action="click->trx-inline-edit#handleClick">
                  <%= trx.vendor.name %>
                </div>
                <input type="text" 
                       data-trx-inline-edit-target="input"
                       data-vendor-autocomplete-target="input"
                       data-field-name="vendor"
                       value="<%= trx.vendor.name %>"
                       class="hidden w-full text-sm rounded border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                       data-action="keydown->trx-selection#handleKeydown input->vendor-autocomplete#search focus->vendor-autocomplete#onFocus input->vendor-autocomplete#onInputChange"
                       list="edit-vendor-datalist-<%= trx.id %>">
                <input type="hidden" 
                       data-vendor-autocomplete-target="hiddenInput"
                       value="<%= trx.vendor.id %>">
                <datalist id="edit-vendor-datalist-<%= trx.id %>" data-vendor-autocomplete-target="datalist"></datalist>
              </div>
              
              <!-- Editable Amount -->
              <div class="truncate text-left px-2" 
                   data-controller="trx-inline-edit"
                   data-trx-inline-edit-trx-id-value="<%= trx.id %>"
                   data-trx-inline-edit-field-name-value="amount"
                   data-trx-inline-edit-original-value-value="<%= trx.amount / 100.0 %>"
                   data-trx-selection-target="amount" 
                   data-amount="<%= trx.amount %>"
                   data-line-id="<%= trx.lines.first&.id %>"
                   data-ledger-id="<%= trx.lines.first&.ledger_id %>"
                   data-subcategory-id="<%= trx.lines.first&.ledger&.subcategory_id %>">
                <div data-trx-inline-edit-target="display" 
                     class="cursor-pointer hover:bg-gray-100 rounded px-1 py-0.5"
                     data-action="click->trx-inline-edit#handleClick">
                  <%= number_to_currency(trx.amount / 100.0) %>
                </div>
                <input type="number" 
                       data-trx-inline-edit-target="input"
                       data-field-name="amount"
                       value="<%= trx.amount / 100.0 %>"
                       step="0.01"
                       class="hidden w-full text-sm rounded border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                       data-action="keydown->trx-selection#handleKeydown">
              </div>
              
              <!-- Editable Category (read-only, shows category of selected subcategory) -->
              <div class="truncate text-left px-2">
                <div data-trx-inline-edit-target="display" 
                     class="cursor-pointer hover:bg-gray-100 rounded px-1 py-0.5"
>
                  <%= trx.lines.first&.ledger&.subcategory&.category&.name %>
                </div>
                <div data-trx-inline-edit-target="input"
                     data-field-name="category_display"
                     class="hidden w-full text-sm rounded border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 bg-gray-100"
                     readonly>
                  <%= trx.lines.first&.ledger&.subcategory&.category&.name %>
                </div>
              </div>
              
              <!-- Editable Subcategory -->
              <div class="truncate text-left px-2">
                <div data-trx-inline-edit-target="display" 
                     class="cursor-pointer hover:bg-gray-100 rounded px-1 py-0.5"
>
                  <%= trx.lines.first&.ledger&.subcategory&.name %>
                </div>
                <select data-trx-inline-edit-target="input"
                        data-field-name="subcategory_id"
                        value="<%= trx.lines.first&.ledger&.subcategory_id %>"
                        class="hidden w-full text-sm rounded border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                        data-action="change->trx-selection#updateCategory keydown->trx-selection#handleKeydown">
                  <option value="">Select Subcategory</option>
                  <% @current_budget.categories.each do |category| %>
                    <optgroup label="<%= category.name %>">
                      <% category.subcategories.each do |subcategory| %>
                        <option value="<%= subcategory.id %>" 
                                data-category-name="<%= category.name %>"
                                <%= 'selected' if subcategory.id == trx.lines.first&.ledger&.subcategory_id %>>
                          <%= subcategory.name %>
                        </option>
                      <% end %>
                    </optgroup>
                  <% end %>
                </select>
              </div>
              
              <!-- Editable Memo -->
              <div class="truncate text-left px-2" 
                   data-controller="trx-inline-edit"
                   data-trx-inline-edit-trx-id-value="<%= trx.id %>"
                   data-trx-inline-edit-field-name-value="memo"
                   data-trx-inline-edit-original-value-value="<%= trx.memo %>"
                   data-trx-cleared="<%= trx.cleared %>"
                   data-trx-memo="<%= trx.memo %>">
                <div data-trx-inline-edit-target="display" 
                     class="cursor-pointer hover:bg-gray-100 rounded px-1 py-0.5"
                     title="<%= trx.memo %>"
                     data-action="click->trx-inline-edit#handleClick">
                  <%= trx.memo %>
                </div>
                <input type="text" 
                       data-trx-inline-edit-target="input"
                       data-field-name="memo"
                       value="<%= trx.memo %>"
                       class="hidden w-full text-sm rounded border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                       data-action="keydown->trx-selection#handleKeydown">
              </div>
              <div data-controller="cleared-toggle"
                  data-cleared-toggle-trx-id-value="<%= trx.id %>"
                  data-cleared-toggle-cleared-value="<%= trx.cleared %>">
                <button data-action="click->cleared-toggle#toggle" class="focus:outline-none">
                  <div data-cleared-toggle-target="circle"
                      class="w-4 h-4 rounded-full <%= trx.cleared ? 'bg-green-500' : 'bg-gray-300' %> mx-auto">
                  </div>
                </button>
              </div>
            </div>
            
            <!-- Edit Control Row (hidden by default) -->
            <div data-trx-inline-edit-target="controlRow" 
                 class="hidden bg-blue-50 border-t border-blue-200 p-2"
                 data-trx-id="<%= trx.id %>">
              <div class="flex justify-between items-center">
                <div class="text-sm text-blue-700 font-medium">
                  Editing Transaction #<%= trx.id %>
                </div>
                <div class="flex gap-2">
                  <button data-trx-inline-edit-target="submitButton"
                          class="px-3 py-1 bg-green-500 hover:bg-green-600 text-white rounded text-sm font-medium"
                          data-action="click->trx-selection#handleSubmit">
                    <i class="fas fa-check mr-1"></i>Submit
                  </button>
                  <button data-trx-inline-edit-target="cancelButton"
                          class="px-3 py-1 bg-gray-500 hover:bg-gray-600 text-white rounded text-sm font-medium"
                          data-action="click->trx-selection#handleCancel">
                    <i class="fas fa-times mr-1"></i>Cancel
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% else %>
          <div class="odd:bg-white even:bg-blue-50 bg-white shadow-sm p-1 hover:bg-gray-50 border-b border-gray-200 cursor-pointer"
               data-trx-selection-target="row"
               data-trx-id="<%= trx.id %>"
               data-trx-cleared="<%= trx.cleared %>"
               data-trx-memo="<%= trx.memo %>"
               data-line-id="<%= trx.lines.first&.id %>"
               data-ledger-id="<%= trx.lines.first&.ledger_id %>"
               data-subcategory-id="<%= trx.lines.first&.ledger&.subcategory_id %>"
               data-action="click->trx-selection#selectRow dblclick->trx-selection#activateRowEditing">
            <div class="grid items-center text-gray-800" style="grid-template-columns: 40px 60px 100px 100px 1fr 100px 100px 1fr 1fr 60px;">
              <div class="px-2">
                <input type="checkbox" 
                       data-trx-selection-target="checkbox"
                       data-trx-id="<%= trx.id %>"
                       data-action="click->trx-selection#toggleSelection"
                       class="rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
              </div>
              <div class="truncate text-left px-2"><%= trx.id %></div>
              <!-- Editable Account -->
              <div class="truncate text-left px-2">
                <div data-trx-inline-edit-target="display" 
                     class="cursor-pointer hover:bg-gray-100 rounded px-1 py-0.5"
>
                  <%= trx.account.name %>
                </div>
                <select data-trx-inline-edit-target="input"
                        data-field-name="account_id"
                        value="<%= trx.account.id %>"
                        class="hidden w-full text-sm rounded border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                        data-action="keydown->trx-selection#handleKeydown">
                  <% @current_budget.accounts.each do |account| %>
                    <option value="<%= account.id %>" <%= 'selected' if account.id == trx.account.id %>><%= account.name %></option>
                  <% end %>
                </select>
              </div>
              
              <!-- Editable Date -->
              <div class="truncate text-left px-2" 
                   data-controller="trx-inline-edit"
                   data-trx-inline-edit-trx-id-value="<%= trx.id %>"
                   data-trx-inline-edit-field-name-value="date"
                   data-trx-inline-edit-original-value-value="<%= trx.date %>"
                   data-trx-cleared="<%= trx.cleared %>"
                   data-trx-memo="<%= trx.memo %>">
                <div data-trx-inline-edit-target="display" 
                     class="cursor-pointer hover:bg-gray-100 rounded px-1 py-0.5"
                     data-action="click->trx-inline-edit#handleClick">
                  <%= trx.date %>
                </div>
                <input type="date" 
                       data-trx-inline-edit-target="input"
                       data-field-name="date"
                       value="<%= trx.date %>"
                       class="hidden w-full text-sm rounded border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                       data-action="keydown->trx-selection#handleKeydown">
              </div>
              
              <!-- Editable Vendor -->
              <div class="truncate text-left px-2" 
                   data-controller="trx-inline-edit vendor-autocomplete"
                   data-trx-inline-edit-trx-id-value="<%= trx.id %>"
                   data-trx-inline-edit-field-name-value="vendor"
                   data-trx-inline-edit-original-value-value="<%= trx.vendor.name %>"
                   data-vendor-autocomplete-search-url-value="<%= search_vendors_path %>"
                   data-vendor-autocomplete-budget-id-value="<%= @current_budget.id %>"
                   data-trx-cleared="<%= trx.cleared %>"
                   data-trx-memo="<%= trx.memo %>">
                <div data-trx-inline-edit-target="display" 
                     class="cursor-pointer hover:bg-gray-100 rounded px-1 py-0.5"
                     data-action="click->trx-inline-edit#handleClick">
                  <%= trx.vendor.name %>
                </div>
                <input type="text" 
                       data-trx-inline-edit-target="input"
                       data-vendor-autocomplete-target="input"
                       data-field-name="vendor"
                       value="<%= trx.vendor.name %>"
                       class="hidden w-full text-sm rounded border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                       data-action="keydown->trx-selection#handleKeydown input->vendor-autocomplete#search focus->vendor-autocomplete#onFocus input->vendor-autocomplete#onInputChange"
                       list="edit-vendor-datalist-<%= trx.id %>">
                <input type="hidden" 
                       data-vendor-autocomplete-target="hiddenInput"
                       value="<%= trx.vendor.id %>">
                <datalist id="edit-vendor-datalist-<%= trx.id %>" data-vendor-autocomplete-target="datalist"></datalist>
              </div>
              
              <!-- Editable Amount -->
              <div class="truncate text-left px-2" 
                   data-controller="trx-inline-edit"
                   data-trx-inline-edit-trx-id-value="<%= trx.id %>"
                   data-trx-inline-edit-field-name-value="amount"
                   data-trx-inline-edit-original-value-value="<%= trx.amount / 100.0 %>"
                   data-trx-selection-target="amount" 
                   data-amount="<%= trx.amount %>">
                <div data-trx-inline-edit-target="display" 
                     class="cursor-pointer hover:bg-gray-100 rounded px-1 py-0.5"
                     data-action="click->trx-inline-edit#handleClick">
