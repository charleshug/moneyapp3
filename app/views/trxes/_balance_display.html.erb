<!-- Balance Display Box -->
<div class="bg-gray-50 border border-gray-200 rounded-lg p-4 min-w-80">
  <div class="flex items-center justify-between">
    <!-- Cleared Balance -->
    <div class="text-center">
      <div class="text-sm font-medium text-gray-600 mb-1">Cleared Balance</div>
      <div class="text-lg font-bold text-green-600" data-balance="cleared">
        <%= number_to_currency((@trxes.select(&:cleared).sum(&:amount) / 100.0)) %>
      </div>
      <div class="text-xs text-gray-500 mt-1" data-count="cleared">
        <%= pluralize(@trxes.select(&:cleared).count, 'transaction') %>
      </div>
    </div>
    
    <!-- Plus Sign -->
    <div class="text-2xl font-bold text-gray-400 mx-4">+</div>
    
    <!-- Uncleared Transactions -->
    <div class="text-center">
      <div class="text-sm font-medium text-gray-600 mb-1">Uncleared Transactions</div>
      <div class="text-lg font-bold text-orange-600" data-balance="uncleared">
        <%= number_to_currency((@trxes.reject(&:cleared).sum(&:amount) / 100.0)) %>
      </div>
      <div class="text-xs text-gray-500 mt-1" data-count="uncleared">
        <%= pluralize(@trxes.reject(&:cleared).count, 'transaction') %>
      </div>
    </div>
    
    <!-- Equals Sign -->
    <div class="text-2xl font-bold text-gray-400 mx-4">=</div>
    
    <!-- Working Balance -->
    <div class="text-center">
      <div class="text-sm font-medium text-gray-600 mb-1">Working Balance</div>
      <div class="text-lg font-bold text-blue-600" data-balance="working">
        <%= number_to_currency((@trxes.sum(&:amount) / 100.0)) %>
      </div>
      <div class="text-xs text-gray-500 mt-1" data-count="total">
        <%= pluralize(@trxes.count, 'transaction') %>
      </div>
    </div>
  </div>
</div>
