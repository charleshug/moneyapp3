<% provide(:title, "New Transaction") %>

<div class="bg-gray-100 rounded-lg shadow-md overflow-hidden flex flex-col h-[calc(100vh-120px)]">
  <!-- Header row -->
  <div class="bg-gray-800 py-3 px-4 flex justify-between items-center flex-shrink-0">
    <div class="w-1/3">
      <%= link_to "Back", request.referer || trxes_path, class: "text-white hover:text-blue-200" %>
    </div>
    <h1 class="text-white text-xl font-bold w-1/3 text-center">New Transaction</h1>
    <div class="w-1/3 text-right">
      <%= link_to "Import", import_trxes_path, class: "bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-sm mr-2" %>
      <%= link_to "Schedule", new_scheduled_trx_path, class: "bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded text-sm" %>
    </div>
  </div>
  
  <!-- Form section -->
  <div class="p-4 overflow-y-auto flex-grow">
    <div class="bg-white rounded-lg p-4 shadow-sm">
      <%= render "form", trx: @trx %>
      
    </div>
  </div>
</div>
