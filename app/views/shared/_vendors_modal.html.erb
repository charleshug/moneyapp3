<!-- app/views/shared/_vendors_modal.html.erb -->
<div 
  id="vendors-modal" 
  data-controller="modal" 
  class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center z-50 hidden"
  data-action="click->modal#hideOnBackgroundClick"
>
  <div 
    class="bg-white rounded-lg shadow-xl w-full max-w-6xl h-[80vh] relative flex flex-col" 
    data-modal-target="container"
  >
    <!-- Header -->
    <div class="flex justify-between items-center px-6 py-4 border-b flex-shrink-0">
      <h2 class="text-xl font-semibold">Vendors</h2>
      <button 
        data-action="modal#close" 
        class="w-8 h-8 rounded-full bg-gray-100 hover:bg-gray-200 flex items-center justify-center text-gray-500 hover:text-gray-700 transition-colors duration-200"
        title="Close"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Main content area -->
    <div class="flex-1 flex overflow-hidden" data-modal-target="contentWrapper">
      <!-- Left side - Vendor list (1/3 width) -->
      <div class="w-1/3 border-r border-gray-200 flex flex-col">
        <!-- Add new vendor button -->
        <div class="p-4 border-b border-gray-200 flex-shrink-0">
          <%= link_to "New Vendor", new_vendor_path, 
              data: { turbo_frame: "vendor-form-frame", action: "click->vendors#loadNewVendorForm" }, 
              class: "w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 text-center block" %>
        </div>
        
        <!-- Vendor list -->
        <div class="flex-1 overflow-y-auto" data-controller="vendors">
          <div id="vendors-list">
            <%= render "vendors/list", vendors: vendors %>
          </div>
        </div>
      </div>

      <!-- Right side - Form area (2/3 width) -->
      <div class="w-2/3 flex flex-col">
        <div class="flex-1 overflow-y-auto p-6">
          <div id="vendor-form-container">
            <div class="flex items-center justify-center h-full text-gray-500">
              <div class="text-center">
                <svg class="w-16 h-16 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                <p class="text-lg font-medium">Select a vendor to edit</p>
                <p class="text-sm">or create a new vendor</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <%= turbo_frame_tag "vendor-form-frame" %>
    </div>

    <!-- Footer with Close button -->
    <div class="px-6 py-4 border-t border-gray-200 flex justify-end flex-shrink-0">
      <button 
        data-action="modal#close" 
        class="px-6 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-md transition-colors duration-200"
      >
        Close
      </button>
    </div>
  </div>
</div>
